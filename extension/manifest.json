{
  "manifest_version": 3,
  "name": "Adaptive AI",
  "version": "0.1.0",
  "description": "Skill-aware page summarizer",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/extract.ts"]
    }
  ]
}